# Focusmate API - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ==================================================
# REQUIRED FOR PRODUCTION
# ==================================================

# Database Configuration
FOCUSMATE_API_DATABASE_PASSWORD=your_secure_database_password_here

# Application Host (used in email links)
# Example: api.focusmate.com
APP_HOST=localhost

# CORS - Allowed Origins (comma-separated)
# Example: https://app.focusmate.com,https://www.focusmate.com
# Leave empty for development (allows all origins)
ALLOWED_ORIGINS=

# ==================================================
# OPTIONAL CONFIGURATION
# ==================================================

# JWT Token Expiration (in hours)
# Default: 24 hours
JWT_EXPIRATION_HOURS=24

# Redis URL
# Default: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Rails Environment
# Options: development, test, production
RAILS_ENV=development

# Rails Log Level
# Options: debug, info, warn, error, fatal
RAILS_LOG_LEVEL=info

# Rails Max Threads
RAILS_MAX_THREADS=5

# ==================================================
# THIRD-PARTY SERVICES
# ==================================================

# Sentry (Error Tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Firebase Cloud Messaging (Push Notifications)
# FCM_SERVER_KEY=your_fcm_server_key_here

# APNs (Apple Push Notifications)
# APNS_KEY_ID=your_apns_key_id
# APNS_TEAM_ID=your_apns_team_id
# APNS_BUNDLE_ID=com.focusmate.app

# ==================================================
# DEVELOPMENT/TESTING
# ==================================================

# Mailcatcher (Development Email Testing)
# Uncomment if using Mailcatcher
# SMTP_ADDRESS=localhost
# SMTP_PORT=1025

# ==================================================
# SECURITY NOTES
# ==================================================
# - NEVER commit this file with real credentials to version control
# - Use strong, unique passwords for production
# - Rotate credentials regularly
# - Use secrets management in production (AWS Secrets Manager, etc.)
